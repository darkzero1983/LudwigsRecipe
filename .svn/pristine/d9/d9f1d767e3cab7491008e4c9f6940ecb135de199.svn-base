@import "../includes.less";

.recipe-overview-item {
	cursor: pointer;
	border-bottom: 1px solid #BBB;
	a, a:hover, a:focus
	{
		color:#373a3c;
		text-decoration:none;
	}
	.teaser-image {
		float: left;
	}

	.teaser-text {
		float: left;
	}
}

.recipe-detail-content
{
	td{
		padding:3px;
	}
	h2
	{
		line-height:32px;
		color: @default-color;
		font-size: 24px;
	}
	h3
	{
		margin-top:30px;
		line-height:28px;
		color: @default-color;
		font-size: 18px;
	}
}

.recipe-detail-description
{
	font-style: italic;
}

.recipe-detail-ingredients
{
	td:first-of-type
	{
		width:100px;
	}
}

.detail-image
{
	max-width:100%;
	margin-bottom:10px;
}