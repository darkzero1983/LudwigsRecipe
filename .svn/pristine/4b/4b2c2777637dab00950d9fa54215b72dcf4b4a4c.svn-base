@import "../includes.less";

@media (max-width: @sm-width-max) {
	.headline {
		font-size: 24px;
	}

	.teaser-image {
		width: 117px;

		img {
			height: 80px;
			width: 107px;
		}
	}

	.recipe-overview-item {
		padding-bottom: 5px;
		margin-bottom: 5px;

		

		.teaser-text {
			width: ~"calc(100% - 147px)";

			.recipe-info {
				margin-top: 10px;
				font-size: 10px;
			}
		}
	}

	

	.recipe-detail-description
	{
		margin-top:10px;
		font-style: italic;
	}
	.recipe-detail-content-text
	{
		margin-top:10px;
	}
}