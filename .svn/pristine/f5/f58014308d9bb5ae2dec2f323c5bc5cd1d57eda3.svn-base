@media (min-width: 768px) {
  .teaser-image {
    width: 250px;
  }
  .teaser-image img {
    width: 240px;
    height: 180px;
  }
  .recipe-overview-item {
    padding-bottom: 10px;
    margin-bottom: 10px;
  }
  .recipe-overview-item .teaser-text {
    width: calc(100% - 250px);
  }
  .recipe-overview-item .teaser-text .recipe-name {
    font-size: 26px;
    font-weight: bold;
  }
  .detail-image {
    margin-top: 5px;
  }
  .recipe-left-element-distance {
    margin-right: 20px;
    margin-bottom: 20px;
  }
  #ingredientTable td {
    padding-top: 2px;
    padding-bottom: 2px;
  }
  #ingredientTable td .form-control {
    font-size: 12px;
  }
  #ingredientTable td .btn-danger {
    padding: 2px 5px;
  }
}
