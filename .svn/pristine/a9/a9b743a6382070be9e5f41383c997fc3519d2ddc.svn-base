<ol class="breadcrumb">
	<li><a [routerLink]="['Home']">Ludwigs Rezepte</a></li>
	<li class="active">Anmelden</li>
</ol>

<h1 class="headline">Anmelden</h1>
<div (ngSubmit)="submitted=true; submit(model);">
	<div class="form-group row" [hidden]="!loginFailed" style="margin-bottom:0;">

		<label for="inputEmail3" class="col-sm-offset-3 col-sm-2 col-xs-12 form-control-label">&nbsp;</label>
		<div class="col-sm-4 col-xs-12">
			<span class="field-validation-error text-danger">Der Benutzername oder das Passwort ist falsch.</span>
		</div>
	</div>
	<div class="form-group row">
		<label for="inputEmail3" class="col-sm-offset-3 col-sm-2 col-xs-12 form-control-label">Benutzername</label>
		<div class="col-sm-4 col-xs-12">
			<input [(ngModel)]="model.UserName" type="text" class="form-control" placeholder="Benutzername" required pattern=".{3,}" />
		</div>
	</div>
	<div class="form-group row">
		<label for="inputPassword3" class="col-sm-offset-3 col-sm-2 col-xs-12 form-control-label">Passwort</label>
		<div class="col-sm-4 col-xs-12">
			<input [(ngModel)]="model.Password" type="password" class="form-control" placeholder="Passwort" required pattern=".{3,}" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-offset-5 col-sm-4 col-xs-12">
			<div class="checkbox">
				<input type="checkbox" name="RememberMe" [(ngModel)]="model.RememberMe" />
				<label for="RememberMe">Angemeldet bleiben?</label>
			</div>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-offset-5 col-sm-4 col-xs-12">
			<input type="submit" class="btn btn-success" value="Anmelden" (click)="submit(model);"/>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-offset-5 col-sm-4 col-xs-12">
			<a [routerLink]="['Register']">Registrieren</a><br>
			<a [routerLink]="['ForgotPassword']">Passwort vergessen?</a>
		</div>
	</div>
</div>