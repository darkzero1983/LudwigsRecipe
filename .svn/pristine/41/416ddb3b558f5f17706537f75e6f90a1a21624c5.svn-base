@media (max-width: 767px) {
  .col-xs-12,
  .col-sm-12 {
    padding-left: 0;
    padding-right: 0;
  }
  .category-buttons {
    padding-right: 0;
    padding-top: 5px;
  }
  .no-padding-xs-to-sm {
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
  }
  .catagory-edit-form input[type="text"] {
    font-size: 12px;
  }
  .catagory-edit-form .btn {
    font-size: 10px;
    padding: 4px 8px;
  }
  .form-control-label {
    font-weight: bold;
  }
}
