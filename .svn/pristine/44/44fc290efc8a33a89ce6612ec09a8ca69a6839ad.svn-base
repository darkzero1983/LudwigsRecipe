<ol class="breadcrumb">
	<li><a routerLink="/">Ludwigs Rezepte</a></li>
	<li class="active">Rezept Detail</li>
</ol>

<div [hidden]="!recipe.name">
	<div class="row">
		<div class="col-xs-10 col-sm-9" style="padding-left:0;">
			<h1 class="headline">{{recipe.name}}</h1>
		</div>
		<div class="col-xs-2 col-sm-3 text-right">
			<div class="recipe-detail-menu" onclick="window.print();">
				<!--<a href="/Drucken/Rezept/{{recipe.id}}/{{costumAmount}}" target="_blank"><i class="fa fa-print"></i></a>-->
				<i class="fa fa-print" on></i>
			</div>
		</div>
	</div>
	<div class="recipe-detail-content">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-3 text-center recipe-left-element-distance no-padding printing-left-side">
				<img src="{{recipe.teaserImageUrl}}?w=640&h=480&mode=crop" class="detail-image" />
			</div>
			<span class="recipe-detail-description printing-right-side" [innerHTML]="recipe.description"></span>
		</div>
		<div class="row">
			<div class="recipe-detail-content-text">
				<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-3 recipe-left-element-distance no-padding printing-left-side">
					<recipeingredients-directive [ingredients]="recipe.ingredients" [measurement]="recipe.measurement.name" [amount]="recipe.ingredientCount" (changeCostumAmount)="costumAmount=$event;replaceContentNumbers();"></recipeingredients-directive>
					<div [hidden]="!recipe.preparationTime || !recipe.waitingTime">
						<h2>Rezept Informationen</h2>
						<table class="table table-striped recipe-detail-ingredients">
							<tr *ngIf="recipe.preparationTime > 0">
								<td class="text-left">Vorbereitungszeit:</td>
								<td class="text-right">{{recipe.preparationTime}} Min</td>
							</tr>
							<tr *ngIf="recipe.waitingTime > 0">
								<td class="text-left">Zubereitungszeit:</td>
								<td class="text-right">{{recipe.waitingTime}} Min</td>
							</tr>
						</table>
					</div>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 col-xl-8 printing-right-side" [innerHTML]="recipe.content"></div>
			</div>
		</div>
	</div>
</div>