{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"types": [ "node" ],
		"moduleResolution": "node",
		"sourceMap": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"paths": {
			"app/*": [ "./wwwroot/app/*" ]
		}
	},
	"filesGlob": [
		"**/*.ts",
		"**/**/*.ts",
		"**/**/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"wwwroot/node_modules",
		"typings"
	],
	"compileOnSave": true
}
